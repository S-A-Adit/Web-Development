<h1 class="main-title">Items</h1>
<div class="list-container">
  <a href="/items/create" class="btn btn-primary">Create New Item</a>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category ID</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% items.forEach(item => { %>
        <tr>
          <td><a href="/items/<%= item.id %>"><%= item.name %></a></td>
          <td><%= item.category_id %></td>
          <td class="action-links">
            <a href="/items/<%= item.id %>/edit" class="btn btn-secondary">Edit</a>
            <a href="/items/<%= item.id %>/delete" class="btn btn-danger">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
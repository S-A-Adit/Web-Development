<%- include("../layouts/layout.ejs") %>

<div class="detail-card">
  <h1 class="main-title">Category: <%= category.name %></h1>
  <div class="detail-item">
    <span class="detail-label">Description:</span>
    <p><%= category.description %></p>
  </div>

  <h2>Items in this category</h2>
  <div class="list-container">
    <% if(items.length === 0) { %>
      <p>No items found in this category.</p>
    <% } else { %>
      <ul>
        <% items.forEach(item => { %>
          <li>
            <a href="/items/<%= item.id %>"><%= item.name %></a>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <div class="action-links">
    <a href="/categories/<%= category.id %>/update" class="btn btn-secondary">Edit Category</a>
    <a href="/categories/<%= category.id %>/delete" class="btn btn-danger">Delete Category</a>
    <a href="/categories" class="btn btn-primary">Back to Categories</a>
  </div>
</div>